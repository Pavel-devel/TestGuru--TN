<h1>List of <%= @test.title %> test questions</h1>

<table>
  <thead>
  <tr>
    <th>Body</th>
    <th colspan="3">Action</th>
  </tr>
  </thead>

  <tbody>
  <% @test.questions.each do |question| %>
    <tr>
      <td><%= question.body %></td>
      <td><%= link_to "Show", question %></td>
      <td><%= link_to "Edit", edit_question_path(question) %></td>
      <td><%= link_to "Destroy", question, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to "Add question in #{@test.title}", new_test_question_path %>

<br><br>

<%= link_to "Back", tests_path %>
