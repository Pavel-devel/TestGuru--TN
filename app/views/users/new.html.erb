<div class="container">
  <h2 class="title">Данные пользователя<h2>

  <div class="mt">
    <%= form_with model: @user, data: {} do |form| %>
      <p><%= form.label :name, 'Ваше имя' %><p>
      <p><%= form.text_field :name, class: 'form-text-field' %><p>

      <p class="mt-lg"><%= form.submit 'Зарегистрироваться', class: 'button button-main' %>
    <% end %>
  </div>
</div>
