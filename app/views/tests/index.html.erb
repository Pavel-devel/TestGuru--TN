<h1>All tests</h1>

<table>
  <thead>
    <tr>
      <th>|| Title ||</th>
      <th>|| Action ||</th>
      <th>|| Amount ||</th>
      <th>|| Action ||</th>
    </tr>
  </thead>

  <tbody>
    <% @tests.each do |test| %>
      <tr>
        <td><%= test.title %></td>
        <td><%= link_to "Show test", test_path(test) %> ||</td>
        <td>_____<%= test.questions.count %>_____||</td>
        <td><%= link_to "Show question", test_questions_path(test) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<p><%= link_to "Create new test", new_test_path %></p>
