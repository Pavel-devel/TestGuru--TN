<h1>List of <%= @test.title %> test questions</h1>

<p>Id:   <%= @test.id %></p>
<p>Title: <%= @test.title %></p>
<p>Category: <%= @test.category_id %></p>
<p>Author: <%= @test.author_id %></p>

<table>
  <thead>
  <tr>
    <th>||Id||</th>
    <th>||Body question||</th>
    <th colspan="2">||Action||</th>
  </tr>
  </thead>

  <tbody>
    <%= render 'tests/question' %>
  </tbody>
</table>

<br><br>

<%= link_to "Add question in #{@test.title}", new_test_question_path(@test)%>
<br>

<br>

<%= link_to "Back", tests_path %>
